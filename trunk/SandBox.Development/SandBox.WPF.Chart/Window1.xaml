<Window x:Class="WpfChart2.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfChart2"
    Title="Window1" Height="256" Width="427" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />            
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <local:WpfMultiChart x:Name="mChart" Grid.Row="0" Margin="2,10,10,2" MinHeight="100" />
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1" >
            <Button Width="50" Click="Button_Click">Test</Button>
            <TextBlock Name="WindowSize"></TextBlock>
        </StackPanel>

    </Grid>
</Window>
